<UserControl  
    x:Class="StockApp.Views.Components.UserAuthStatusComponent"  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
    xmlns:local="using:StockApp.Views.Components">  

    <Grid>  
        <StackPanel x:Name="LoginPanel" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">  
            <TextBlock x:Name="UserNameTextBlock" Text="Guest" FontSize="16" Margin="0,0,0,10"/>  
            <TextBlock x:Name="LoginStatusTextBlock" Text="Not Logged In" FontSize="16" Margin="0,0,0,10"/>  
            <TextBlock x:Name="UserRoleTextBlock" Text="Guest" FontSize="16" Margin="0,0,0,10"/>  
            <Button x:Name="LogoutButton" Content="Logout" Visibility="Collapsed" Click="LogoutButton_Click"/>  
        </StackPanel>  
    </Grid>  

</UserControl>