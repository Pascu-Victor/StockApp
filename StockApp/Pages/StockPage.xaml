<?xml version="1.0" encoding="utf-8"?>
<Page  
   x:Class="StockApp.Pages.StockPage"  
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
   xmlns:local="using:StockApp"  
   xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"  
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
   xmlns:viewmodels="using:StockApp.ViewModels"  
   d:DataContext="{d:DesignInstance Type=viewmodels:StockPageViewModel}"  
   mc:Ignorable="d"  
   Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">  

   <Grid Background="#161616">  
       <Grid.RowDefinitions>  
           <RowDefinition Height="Auto"/>  
           <RowDefinition Height="*"/>  
       </Grid.RowDefinitions>  

       <StackPanel Grid.Row="0" Orientation="Horizontal" Height="60" HorizontalAlignment="Stretch" Background="#2D2D2D">  
           <Button Content="Return" Width="100" Height="40" Margin="10" Click="ReturnButtonClick" VerticalAlignment="Center" />  
           <TextBlock x:Name="StockSymbol" Text="{Binding SelectedStock.Symbol}" FontSize="16" Margin="0,0,10,0" Foreground="White" VerticalAlignment="Center" />  
           <TextBlock x:Name="StockName" Text="{Binding SelectedStock.Name}" FontSize="16" Foreground="White" VerticalAlignment="Center" />  
           <Button Command="{x:Bind command}" x:Name="AuthorButton" Content="Author" Width="100" Height="40" Margin="10" VerticalAlignment="Center" />  
       </StackPanel>  

       <Grid Grid.Row="1">  
           <Grid.ColumnDefinitions>  
               <ColumnDefinition Width="*"/>  
               <ColumnDefinition Width="Auto"/>  
           </Grid.ColumnDefinitions>  

           <lvc:CartesianChart  
               x:Name="StockChart"  
               Grid.Column="0"  
               HorizontalAlignment="Stretch"  
               VerticalAlignment="Stretch"  
               Margin="10"  
               Series="{Binding Series}"  
               AnimationsSpeed="0">  
           </lvc:CartesianChart>  

           <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">  
               <StackPanel Visibility="{Binding IsAuthenticated}" Margin="0, 10, 0, 10" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch" Spacing="10">  

                   <Button x:Name="FavoriteButton"  
                       Width="40"  
                       Height="40"  
                       VerticalAlignment="Center"  
                       HorizontalAlignment="Center"
                       Background="{Binding IsFavorite, Converter={StaticResource BoolToFavoriteColorConverter}, ConverterParameter=Yellow|Black}"
                       Click="FavoriteButtonClick"  
                       IsEnabled="{Binding IsAuthenticated, Mode=TwoWay}">  
                       <Button.Content>  
                          <FontIcon  
                              Glyph="&#xE735;"
                              Foreground="{Binding IsFavorite, Converter={StaticResource BoolToFavoriteColorConverter}, ConverterParameter=Black|White}"
                              FontSize="15" />  
                       </Button.Content>  
                   </Button>  

                   <Button x:Name="AlertButton"  
                       Width="40"  
                       Height="40"  
                       VerticalAlignment="Center"  
                       HorizontalAlignment="Center"  
                       Background="RoyalBlue"  
                       Content="ðŸ””"  
                       Click="AlertsButtonClick"  
                       IsEnabled="{Binding IsAuthenticated, Mode=TwoWay}">  
                   </Button>  

                   <TextBlock x:Name="GemsLabel"  
                       VerticalAlignment="Center"  
                       HorizontalAlignment="Center"  
                       FontSize="16"  
                       Foreground="#b5fc51"  
                       Margin="0,0,10,0">  
                       <Run Text="Gems:"/>  
                       <Run Text="{Binding UserGems}"/>  
                   </TextBlock>  
               </StackPanel>  

               <TextBlock  
                   Text="Price"  
                   FontSize="16"  
                   Foreground="#A6A6A6"  
                   HorizontalAlignment="Center"  
                   VerticalAlignment="Center"  
                   Margin="0, 10, 20, 10" />  
               <TextBlock  
                   FontSize="32"  
                   Foreground="#b5fc51"  
                   HorizontalAlignment="Center"  
                   VerticalAlignment="Center"  
                   Margin="0, 10, 20, 10">  
                   <Run Text="Price:"/>  
                   <Run Text="{Binding SelectedStock.Price}"/>  
               </TextBlock>  
               <TextBlock x:Name="IncreaseLabel"  
                   Text=""  
                   FontSize="24"  
                   Foreground="White"  
                   HorizontalAlignment="Center"  
                   VerticalAlignment="Center"  
                   Margin="0, 10, 20, 10" />  

               <TextBlock  
                   FontSize="24"  
                   Foreground="White"  
                   HorizontalAlignment="Center"  
                   VerticalAlignment="Center"  
                   Margin="0, 10, 20, 10"  
                   Visibility="{Binding IsAuthenticated}">  
                   <Run Text="Owned:"/>  
                   <Run Text="{Binding OwnedStocks.Quantity}"/>  
               </TextBlock>  

               <StackPanel Visibility="{Binding IsAuthenticated}" Margin="0, 10, 0, 10" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch" Spacing="10">  
                   <Button x:Name="BuyButton"  
                       Content="BUY"  
                       VerticalAlignment="Center"  
                       HorizontalAlignment="Center"  
                       Background="#b5fc51"  
                       Foreground="DarkGreen"  
                       Click="BuyButtonClick"  
                       IsEnabled="{Binding CanBuy, UpdateSourceTrigger=PropertyChanged}" />  

                   <NumberBox  
                       x:Name="QuantityInput"  
                       Minimum="1"  
                       Maximum="500"  
                       Value="1"  
                       VerticalAlignment="Center"  
                       HorizontalAlignment="Center" />  

                   <Button x:Name="SellButton"  
                       Content="SELL"  
                       VerticalAlignment="Center"  
                       HorizontalAlignment="Center"  
                       Background="IndianRed"  
                       Foreground="#471310"  
                       Click="SellButtonClick"  
                       IsEnabled="{Binding CanSell, UpdateSourceTrigger=PropertyChanged}" />  
               </StackPanel>  
           </StackPanel>  
       </Grid>  
   </Grid>  
</Page>