@model StockAppWeb.Views.CreateStock.IndexModel
@{
    ViewData["Title"] = "Create Stock";
}

<div class="container">
    <h2>Create New Stock</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">@Model.SuccessMessage</div>
    }

    <form method="post" class="mt-4">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Input.Name" class="control-label">Stock Name</label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Symbol" class="control-label">Stock Symbol</label>
                    <input asp-for="Input.Symbol" class="form-control" />
                    <span asp-validation-for="Input.Symbol" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Input.InitialPrice" class="control-label">Initial Price</label>
                    <input asp-for="Input.InitialPrice" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Input.InitialPrice" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Quantity" class="control-label">Initial Quantity</label>
                    <input asp-for="Input.Quantity" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Input.Quantity" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Create Stock</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 