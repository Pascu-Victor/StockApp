@model Common.Models.User
@{
    ViewData["Title"] = "Manage Account";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Personal Information</h4>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>Username:</strong>
                    </div>
                    <div class="col-md-9">
                        @User.Identity?.Name
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>Email:</strong>
                    </div>
                    <div class="col-md-9">
                        @Model?.Email
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>Full Name:</strong>
                    </div>
                    <div class="col-md-9">
                        @Model?.FirstName @Model?.LastName
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>Phone Number:</strong>
                    </div>
                    <div class="col-md-9">
                        @Model?.PhoneNumber
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>Birth Date:</strong>
                    </div>
                    <div class="col-md-9">
                        @Model?.Birthday.ToShortDateString()
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" href="#">Edit Profile</a>
                <a class="btn btn-outline-primary" href="#">Change Password</a>
            </div>
        </div>
    </div>
</div>